\def\@maketitle
 {
 \newpage
 \null
 \vskip .375in
 \begin{center}
    {\Large \bf \@title \par}
    % additional two empty lines at the end of the title
    \vspace*{24pt}
    {
    \large
    \lineskip .5em
    \begin{tabular}[t]{c}
       \@author
    \end{tabular}
    \par
    }
    % additional small space at the end of the author name
    \vskip .5em
    {
     \large
    \begin{tabular}[t]{c}
       \@affiliation
    \end{tabular}
    \par
    \ifx \@empty \@email
    \else
       \begin{tabular}{r@{~}l}
          E-mail: & {\tt \@email}
       \end{tabular}
       \par
    \fi
    }
    % additional empty line at the end of the title block
    \vspace*{12pt}
 \end{center}
 }

